rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user has a specific role
    function hasRole(role) {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // Helper function to check if user is admin or manager
    function isAdminOrManager() {
      return hasRole('Administrator') || hasRole('Manager');
    }

    // Helper function to check if user is the document owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own document
      allow read: if isOwner(userId) || isAdminOrManager();

      // Only admins can create/update user roles
      allow create: if isAuthenticated();
      allow update: if hasRole('Administrator') ||
                       (isOwner(userId) && !('role' in request.resource.data.diff(resource.data).affectedKeys()));

      // Only admins can delete users
      allow delete: if hasRole('Administrator');
    }

    // Employee profiles collection
    match /employeeProfiles/{userId} {
      allow read: if isOwner(userId) || isAdminOrManager();
      allow write: if isOwner(userId) || hasRole('Administrator');
    }

    // Projects collection
    match /projects/{projectId} {
      allow read: if isAuthenticated();
      allow write: if isAdminOrManager();
    }

    // Timesheets collection
    match /timesheets/{timesheetId} {
      allow read: if isAuthenticated() &&
                     (resource.data.employeeId == request.auth.uid ||
                      isAdminOrManager());
      allow create, update: if isAuthenticated() &&
                               request.resource.data.employeeId == request.auth.uid;
      allow delete: if hasRole('Administrator');
    }

    // Leave balances collection
    match /leaveBalances/{balanceId} {
      allow read: if isAuthenticated();
      allow write: if isAdminOrManager();
    }

    // Leave requests collection
    match /leaveRequests/{requestId} {
      allow read: if isAuthenticated() &&
                     (resource.data.employeeId == request.auth.uid ||
                      resource.data.managerId == request.auth.uid ||
                      hasRole('Administrator'));
      allow create: if isAuthenticated() &&
                       request.resource.data.employeeId == request.auth.uid;
      allow update: if isAdminOrManager() ||
                       (isOwner(resource.data.employeeId) &&
                        resource.data.status == 'Pending');
      allow delete: if hasRole('Administrator');
    }

    // National holidays collection
    match /nationalHolidays/{holidayId} {
      allow read: if isAuthenticated();
      allow write: if hasRole('Administrator');
    }
  }
}
